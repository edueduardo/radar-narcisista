# ==========================================
# RADAR NARCISISMO - PRODUCTION ENV VARS
# ==========================================

# URL da aplicação em produção
NEXT_PUBLIC_APP_URL=https://seu-dominio.com.br

# Supabase (Produção)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OpenAI (Produção)
OPENAI_API_KEY=sk-your-openai-key
OPENAI_ORG_ID=org-your-org-id

# Stripe (Produção)
STRIPE_SECRET_KEY=sk_live_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-publishable-key

# Redis (Opcional - para cache em produção)
REDIS_URL=redis://your-redis-url:6379

# Email (Produção)
RESEND_API_KEY=re_your-resend-key
NEXT_PUBLIC_FROM_EMAIL=noreply@seu-dominio.com.br

# Analytics (Produção)
NEXT_PUBLIC_GA_ID=G-YOUR-GA-ID
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Segurança
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
ENCRYPTION_KEY=your-encryption-key-32-chars

# Monitoramento (Opcional)
SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_ADMIN=true

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Backup (Produção)
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Logs
LOG_LEVEL=error
ENABLE_QUERY_LOGGING=false

# Performance
ENABLE_BUNDLE_ANALYZER=false
TURBOPACK=true

# Domínios permitidos para CORS
ALLOWED_ORIGINS=https://seu-dominio.com.br,https://www.seu-dominio.com.br

# Configurações de IA
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7
AI_MODEL=gpt-4-turbo-preview

# Limites de uso
MAX_EPISODES_PER_USER=1000
MAX_CHAT_MESSAGES_PER_DAY=50
MAX_PDF_GENERATIONS_PER_MONTH=10
